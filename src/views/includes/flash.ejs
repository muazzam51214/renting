 <!-- Show Alert For Success  -->
 <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
 <% if (success && success.length) { %>
   <script>
     Toastify({
       text: "<%= success %>",
       duration: 4000,  // 3 seconds duration
       gravity: "top",  // Positioning the toast at the top of the page
       position: "right",  // Displaying it on the right
       backgroundColor: "#1ec28b",  // Green background for success
       close: true  // Add close button to the toast
     }).showToast();
   </script>
 <% } %>


