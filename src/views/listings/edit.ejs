<% layout("/layouts/boilerplate") %>
<body>
  <!-- Include Banner -->
  <%- include("../includes/banner.ejs", { pageTitle: 'Edit Listing' }) %>

  <!-- CONTACT FORM SECTION  -->
  <section
    class="float-left w-100 talk-width-our-team-con position-relative main-box padding-top padding-bottom"
  >
    <div class="container wow bounceInUp" data-wow-duration="2s">
      <div class="heading-title text-center">
        <h4 class="text-uppercase">Update Listing</h4>
        <h2 class="">Update Your Property</h2>
        <!-- heading title -->
      </div>
      <div class="row">
        <div class="col-12">
          <div class="register-box">
            <form method="POST" action="/listing/<%= listing._id %>?_method=PUT"  enctype="multipart/form-data">
              <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                  <div class="row">
                    <div class="col-12">
                      <div class="form-group">
                        <label for="title">Enter Title :</label>
                        <input
                          type="text"
                          class="form_style"
                          value="<%= listing.title %>"
                          name="title"
                          id="title"
                        />
                      </div>
                    </div>

                    <div class="col-12">
                      <div class="form-group">
                        <label for="price">Enter Price/Rent Per Month :</label>
                        <input
                          type="number"
                          class="form_style"
                          value="<%= listing.price %>"
                          name="price"
                          id="price"
                        />
                      </div>
                    </div>
                    
                    <div class="col-12">
                      <div class="form-group fon-con">
                        <label for="location">Enter Location :</label>
                        <input
                          type="text"
                          class="mb-md-0 form_style"
                          value="<%= listing.location %>"
                          name="location"
                          id="location"
                        />
                      </div>
                    </div>

                    <div class="col-12">
                      <div class="form-group fon-con">
                        <br>
                        <label for="country">Select Country :</label>
                        <select name="country" id="country" value="<%= listing.country %>">

                          <option 
                            value="pakistan" 
                            <%= listing.country === 'pakistan' ? 'selected' : '' %>
                            >
                            Pakistan
                          </option>

                          <option 
                            value="india" 
                            <%= listing.country === 'india' ? 'selected' : '' %>
                            >
                            India
                          </option>

                          <option 
                            value="usa" 
                            <%= listing.country === 'usa' ? 'selected' : '' %>
                            >
                            USA
                          </option>

                          <option 
                            value="china" 
                            <%= listing.country === 'china' ? 'selected' : '' %>
                            >
                            China
                          </option>

                          <option 
                            value="bangladesh" 
                            <%= listing.country === 'bangladesh' ? 'selected' : '' %>
                            >
                            Bangladesh
                          </option>

                          <option 
                            value="iran" 
                            <%= listing.country === 'iran' ? 'selected' : '' %>
                            >
                            Iran
                          </option>

                          <option 
                            value="iraq" 
                            <%= listing.country === 'iraq' ? 'selected' : '' %>
                            >
                            Iraq
                          </option>

                        </select>
                      </div>
                    </div>

                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                  <div class="row">

                    <div class="col-12">
                      <label>Orignal Image</label>
                      <img src="<%= listing.image.replace("/upload", "/upload/w_100") %>" alt="">
                      <div class="form-group fon-con">
                        <label for="image">Change Image (Optional) :</label>
                          <input 
                          type="file" 
                          accept="image/*"
                          class="mb-md-0 form_style"
                          placeholder="Upload image" 
                          name="image" 
                          id="image" 
                          value="<%= listing.image %>"
                        />
                      </div>
                    </div>

                    <div class="col-12">
                      <div class="form-group mb-0">
                        <br>
                        <label for="description">Enter Description :</label>
                        <textarea
                          class="form_style"
                          name="description"
                          id="description"
                        ><%= listing.description.trim() %></textarea>
                      </div>
                    </div>


                    <div class="col-12"></div>
                      <div class="manage-button ml-3">
                        <button
                          type="submit"
                          class="register_now text-white text-decoration-none w-100"
                        >
                          Update Listing
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- container -->
    </div>
    <!-- talk with our team con -->
  </section>
</body>

